@model IEnumerable<BlobStorageReplicator.Models.Replication>

@{
    ViewBag.Title = "Replications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Replications</h2>

<p>
    @Html.ActionLink("Create New", "Index", "Home")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlobStorages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StarTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @if (item.BlobStorages != null)
                {
                    @Html.Label(item.BlobStorages.SourceAccountName + " -> " + item.BlobStorages.TargetAccountName)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>