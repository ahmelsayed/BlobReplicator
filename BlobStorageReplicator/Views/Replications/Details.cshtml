@model BlobStorageReplicator.Models.Replication

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Replication</h4>
	<hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        
        <dt>
            Source Blob Storage
        </dt>

        <dd>
            @if (Model.BlobStorages != null)
            {
                @Model.BlobStorages.SourceAccountName
            }
        </dd>

        <dt>
            Target Blob Storage
        </dt>

        <dd>
            @if (Model.BlobStorages != null)
            {
                @Model.BlobStorages.TargetAccountName
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StarTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StarTime)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TraceMessages)
        </dt>

        <dd>
            @Html.Raw("<pre>" + Model.TraceMessages + "</pre>")
        </dd>

    </dl>
</div>
